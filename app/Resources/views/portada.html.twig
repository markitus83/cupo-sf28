{% extends 'frontend.html.twig' %}

{% block title %}
    Cupon, cada día ofertas increíbles en tu ciudad con descuentos de hasta el 90%
{% endblock %}

{% block article %}
    <section class="descripcion">
        <h1><a href="#">{{ oferta.nombre }}</a></h1>
        {{ oferta.descripcion }}
        <a href="#" class="boton">Comprar</a>
    </section>

    <section class="galeria">
        <img src="{{ asset('uploads/images/' ~ oferta.rutaFoto) }}" alt="Fotografia de la oferta">
        <p class="precio">{{ oferta.precio }} &euro;
            <span>{{ oferta.descuento }}</span>
        </p>
        <p><strong>Condiciones:</strong> {{ oferta.condiciones }}</p>
    </section>

    <section class="estado">
        <div class="tiempo">
            <strong>Faltan</strong>: {{ oferta.fechaExpiracion|date}}
        </div>

        <div class="compras">
            <strong>Compras</strong>: {{ oferta.compras }}
        </div>

        <div class="faltan">
            {% set faltan = oferta.umbral - oferta.compras %}
            {% if faltan > 0 %}
                {# Si las compras no llegan al umbral mínimo establecido #}
                Faltan <strong>{{ faltan }} compras</strong> <br /> para activar la oferta
            {% else %}
                {# Si las compras superan el umbral mínimo establecido #}
                <strong>Oferta activa</strong> por superar las <strong>{{ oferta.umbral }}</strong> compras necesarias
            {% endif %}
        </div>
    </section>

    <section class="direccion">
        <h2>Disfruta de la oferta en</h2>
        <p>
            <a href="#">{{ oferta.tienda.nombre }}</a>
            {{ oferta.tienda.direccion }}
        </p>
    </section>

    <section class="tienda">
        <h2>Sobre la tienda</h2>
        {{ oferta.tienda.descripcion }}
    </section>
{% endblock %}

{% block aside %}
    ## FORMULARIO DE LOGIN ##
    <section id="nosotros">
        <h2>Sobre nosotros</h2>
        <p>Lorem ipsum dolor ...</p>
    </section>
{% endblock %}